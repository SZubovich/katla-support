@model WebAPI.Models.AccountModel

@{
    ViewBag.Title = "Index";
}

<h2>Login</h2>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


<table>
    <tr><td><label>Login: </label></td><td><input type="text" id="addName" /></td></tr>
